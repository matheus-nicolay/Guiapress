<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Editar Artigo</h2>
        </div>
        <div class="card-body">
            <form action="/articles/save" method="post">
                <input type="text" class="form-control" name="title" id="title" value="<%= article.title %>" placeholder="Defina o tÃ­tulo do artigo"><br>

                <textarea name="body" id="body" class="form-control" rows="10" placeholder="Escreva o artigo aqui" value="<%- article.body %>" ></textarea><br>

                <label for="category">Categoria:</label>
                <select name="category" id="category" class="form-control"><br>
                    <% categories.forEach((category) => { %>
                        <option value="<%= category.id %>"><%= category.title %></option>
                    <%})%>
                    
                </select><br>>
                

                <button class="btn btn-success">Cadastrar</button>
            </form>
        </div>
    </div>
</div>

<%- include ('../../partials/footer.ejs') %>

<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language: "pt_BR",
        selector: "#body",
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table'
        ]
    });
</script>